{
  "manifest_version": 3,
  "name": "Malware Scanner",
  "version": "1.0",
  "description": "Detects Emotet, SocGholish, and IcedID malware",
  "permissions": ["declarativeNetRequest", "storage", "activeTab"],
  "host_permissions": ["<all_urls>", "http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/alert.png",
      "48": "icons/vaccine.png"
    }
  },
  "icons": {
    "16": "icons/alert.png",
    "48": "icons/vaccine.png"
  }
}